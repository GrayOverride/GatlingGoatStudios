 <p id="notice"><%= notice %></p>

 <%= render :partial => @post %>
 <% if current_user %>
 <div class="admin-bar"> 
   <%= link_to 'New Post', new_post_path %> |
   <%= link_to 'Edit this post', edit_post_path(@post) %> |
   <%= link_to 'Destroy this post', :post, method: :delete, data: { confirm: 'Destroy this post and all its comments?' } %> |
   <%= link_to 'Show all posts', posts_path %>
 </div>
 <% end %> 
 <h2>Comments</h2>

 <div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Comment on this post
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse in">
      <div class="accordion-inner">
       <%= form_for [@post, Comment.new] do |f| %>
       <p>
       <%= f.label :body, "Please be a nice goat and watch your language." %><br/>
        <%= f.text_area :body, :size => "40x5", class: "span12" %>
      </p>
      <%= show_simple_captcha(:object => 'message', :label => " ", :placeholder =>"Retype the Captcha") %>
      <p> &nbsp <%= f.submit "Add comment", :class=>"public-btn" %></p>
      <% end %>
    </div>
  </div>
</div>
</div>



 <div id="comments">
   <%= render :partial => @post.comments.reverse %>
 </div>