<%= form_for(@project) do |f| %>
<% if @project.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

  <ul>
    <% @project.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row-fluid">
<div class="span12">
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_area :desc, :class=> 'span12'%>
</div>
</div>
</div>
<div class="row-fluid">
<div class="span12">
 <p>Images and media<br/> The images that are uploaded here wil be shown on the games info page.</p>
<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Layout
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse in">
      <div class="accordion-inner">
        <div class="field">
          <h3><%= f.label :background %></h3>
          <p>Please provide an image that will cover the page behind the information</p><br />
          <%= f.file_field :background %>
        </div>
        <div class="field">
          <h3><%= f.label :banner %></h3>
          <p>Please provide a banner or logo that will be displayed at the top of the description</p><br />
          <%= f.file_field :banner %>
        </div>
      </div>
    </div>
  </div>
    <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#collapseThree">
        Trailer
      </a>
    </div>
    <div id="collapseThree" class="accordion-body collapse">
      <div class="accordion-inner">
       <div class="field">
        <h3><%= f.label :Trailer %></h3>
          <p>Please provide a 'Youtube embedd' link to publish a video on your game page.</p><br />
        <%= f.text_field :trailer %>
       </div>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
        Screenshots
      </a>
    </div>
    <div id="collapseTwo" class="accordion-body collapse">
      <div class="accordion-inner">
        <div class="field">
        <p>Please provide up to six screenshots. Leave blank while editing to keep the current picture. Try to keep similar resolution for all screenshots for best result.</p><br />

          <%= f.label :screenshot_1 %>
          <%= f.file_field :screenshot1 %>

          <%= f.label :screenshot_2 %>
          <%= f.file_field :screenshot2 %>

          <%= f.label :screenshot_3 %>
          <%= f.file_field :screenshot3 %>

          <%= f.label :screenshot_4 %>
          <%= f.file_field :screenshot4 %>

          <%= f.label :screenshot_5 %>
          <%= f.file_field :screenshot5 %>

          <%= f.label :screenshot_6 %>
          <%= f.file_field :screenshot6 %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

