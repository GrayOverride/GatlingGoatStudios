        <div class="span7">
          <br/>
          <br/>
          <ul class="nav nav-pills">
            <li class="<%= 'place disabled' if current_page?(home_path) %>">
              <%= link_to 'Home', home_path%></li>

            <li class="<%= 'place disabled' if current_page?(projects_path) %>">
              <%= link_to 'Projects', projects_path%></li>

            <li class="<%= 'place disabled' if current_page?(about_path) %>">
              <%= link_to 'About us', about_path%></li>

            <li class="<%= 'place disabled' if current_page?(blog_path) %>">
              <%= link_to 'Blog', blog_path%></li>

            <% if current_user %>
            <li class="<%= 'place disabled' if current_page?(messages_path) %>">
              <%= link_to 'Messages', messages_path%></li>
            <% else %>
            <li class="<%= 'place disabled' if current_page?(contact_path) %>">
              <%= link_to 'Contact', contact_path%></li>
            <% end %>
          </ul>
        </div>
